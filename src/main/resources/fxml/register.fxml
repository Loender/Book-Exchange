<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.*?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab12dub2.controller.RegisterController" alignment="CENTER" spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Register New User" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" prefWidth="150" promptText="Enter username..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Email:"/>
        <TextField fx:id="emailField" prefWidth="150" promptText="Enter email..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" prefWidth="150" promptText="Enter password..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="First Name:"/>
        <TextField fx:id="firstNameField" prefWidth="150" promptText="Enter first name..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Last Name:"/>
        <TextField fx:id="lastNameField" prefWidth="150" promptText="Enter last name..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Phone:"/>
        <TextField fx:id="phoneField" prefWidth="150" promptText="Enter phone (optional)..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Date of Birth:"/>
        <DatePicker fx:id="dateOfBirthPicker" prefWidth="150" promptText="Select date..."/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="registerButton" text="Register" onAction="#register" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#cancel" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>